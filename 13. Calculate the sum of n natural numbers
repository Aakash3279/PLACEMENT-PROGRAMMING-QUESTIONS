import java.util.*;
public class Main {
    public static int sum(int n){
        int sum = 0;
        for(int i = 1;i<=n;i++){
            sum += i;
        }
        return  sum;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter the number to calculate the sum : ");
        int n = sc.nextInt();
        System.out.println(sum(n));
    }
}
